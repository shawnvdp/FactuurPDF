<%- include('partials/header_index.ejs') %>

<div class="container">
  <a class="newBtn" href="/invoice/new"><i class="fa fa-plus"></i>Nieuwe Factuur</a>
  <h1 class="index_header">Facturen</h1>
  <div class="flex flex-col">
  <div class="-my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="py-2 align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-lg">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Nummer
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Klant
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Datum
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                BTW
              </th>
              <th class="px-6 py-3 bg-gray-50 text-left text-xs leading-4 font-medium text-gray-500 uppercase tracking-wider">
                Totaal
              </th>
              <th class="px-6 py-3 bg-gray-50"></th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
          <% invoices.forEach(invoice => { %>
            <tr class="invoice_table_row" data-href="http://localhost:3000/export/<%= invoice.invoiceNumber %>">
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                <%= invoice.invoiceNumber %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap">
                <div class="text-sm leading-5 text-gray-900"><%= invoice.name %></div>
                <div class="text-sm leading-5 text-gray-500"><%= invoice.address %>, <%= invoice.postal %></div>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                <%= invoice.date %>
                 - 
                 <%= invoice.enddate %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
              € <%= invoice.vatPrice %>
                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800 mx-2">
                  9%
                </span>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap text-sm leading-5 text-gray-500">
                € <%= invoice.total %>
              </td>
              <td class="px-6 py-4 whitespace-no-wrap text-right text-sm leading-5 font-medium">
                <a href="/invoice/<%= invoice.invoiceNumber %>/edit" class="text-indigo-600 hover:text-indigo-900">Bewerken</a>
                <a href="/export/<%= invoice.invoiceNumber %>?reminder=true" class="text-indigo-600 hover:text-indigo-900">Herinnering</a>
              </td>
            </tr>
          <% }) %>
            

            <!-- More rows... -->
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</div>

<%- include('partials/footer.ejs') %>